        <!-- Operations Section -->
        <div class="operations-grid">
            <!-- Purge Failed Videos -->
            <div class="operation-card">
                <h2>üóëÔ∏è Purge Failed Videos</h2>
                <p>Clean up videos that failed encoding/processing and unpin IPFS content.</p>
                <button class="btn btn-primary" onclick="runOperation('purge-failed', true)">Preview</button>
